.max-width {
  width 100%
  max-width 2560px
  margin 0 auto
}

.common-width {
  width 1100px
  margin 0 auto
}

li {
  text-decoration none
  list-style none
}

p {
  margin 25px 0
  text-indent 2em
}
.title {
  position relative
  .parallelogram {
    display inline-block
    min-width 150px
    color #ffffff
    background-color #008ace
    text-align center
    font-size 1.5em
    font-weight 700
    transform skew(-45deg) translate(20px)
    .title-content {
      padding 0.2em 1em
      transform skew(45deg)
    }
  }
  .bar {
    position absolute
    top 2px
    left 20%
    width 80%
    height 14px
    z-index -1
    background-color #94c4e6
  }
  .triangle-topleft {
    position absolute
    top 0
    left 0
    width: 0;
    height: 0;
    border-top: 30px solid #94c4e6;
    border-right: 30px solid transparent;
  }
}


