.container {
}

.header {
  display flex
  justify-content center
  align-items center
  height 778px
  min-width 1100px
  background url("../img/header-backgrouund.png") no-repeat 100% 100%
  .lside {
    flex 1
    text-align left
    margin-left 10%
    .logo {
      img {
        display inline-block
        width 80px
        height 80px
      }
      .logo-text {
        height 82px
        font-size 40px
        vertical-align top
        color #fff
        line-height 100px
        background #004986
      }
    }
    .title {
      margin 20px auto 40px auto
      img {
        width 80%
        height 80%
      }
    }
    .form-wrapper {
      margin 10%
      display flex
      justify-content center
      width 60%
      box-shadow 1px 1px 1px 1px rgba(0, 0, 0, .2)
      background rgba(255, 255, 255, 0.3)
    //box-sizing border-box
      height 2em
      border-radius 10px
      border 10px solid rgba(255, 255, 255, 0.3)
      .header-input {
        flex 0 0 85%
        padding-left 1em
        border 0
        border-radius 5px 0 0 5px
        outline none
      }
      .search-btn {
        flex 1
        background-color #FEA600
        background-image url("../img/icon_search.png")
        background-position center
        border-radius 0 5px 5px 0
        border 0
        cursor pointer
        outline none
        padding 0
      }
    }
  }
  .rside {
    flex 1
    height inherit
    .passage {
      width 70%
      height 100%
      background rgba(255, 255, 255, 0.6)
      .title {
        text-align center
        padding-top 80px
        font-size 2em
      //padding-bottom 40px
      }
      .pas {
        padding 2em
      }
      .text {

        font-size 1.3em
        line-height 1.5
        text-indent 2em
      }
      .time {
        color rgb(255, 0, 0)
        text-align center

      }
      .number {
        text-align center
      }
    }
  //background #000
  }
}

.content {
  margin 25px auto
  .test-list {
    width 90%
    display flex
    justify-content space-between
    .item {
      //flex 1
      width 170px
      height 106px
      background-color #004986
    }
  }
}